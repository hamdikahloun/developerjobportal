<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fargments.ProfileFragment">

    <ImageView
        android:src="@drawable/ic_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/profile_img"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:fontFamily="@font/ttcommonslight"
        android:textColor="#313D58"
        android:text="Hamdi Kahloun" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:fontFamily="@font/ttcommonslight"
        android:textColor="@android:color/darker_gray"
        android:text="Developer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textSize="32sp"
        android:fontFamily="@font/ttcommonslight"
        android:textColor="#313D58"
        android:text="Work experience" />

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="@android:color/darker_gray"
                        android:text="04.2019-NOW" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="#000000"
                        android:text="VEGANET TUNISIA" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="@android:color/darker_gray"
                        android:text="Develeoper &amp; IT department manager" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:background="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="@android:color/darker_gray"
                        android:text="06.2012-04-2019" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="#000000"
                        android:text="MyTEK.tn" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="@android:color/darker_gray"
                        android:text="IT department manager" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:background="@drawable/card_shape"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:tint="@android:color/darker_gray"
                        android:src="@drawable/ic_add_24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="@android:color/darker_gray"
                        android:text="add work experience" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:textSize="32sp"
        android:fontFamily="@font/ttcommonslight"
        android:textColor="#313D58"
        android:text="Courses / Workshops" />

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:background="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="@android:color/darker_gray"
                        android:text="01.2010" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="#000000"
                        android:text="Android Developement" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:background="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="@android:color/darker_gray"
                        android:text="09.2002" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="#000000"
                        android:text="IT Technician" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:background="@drawable/card_shape"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:tint="@android:color/darker_gray"
                        android:src="@drawable/ic_add_24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/ttcommonslight"
                        android:textColor="@android:color/darker_gray"
                        android:text="add courses / workshops" />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>