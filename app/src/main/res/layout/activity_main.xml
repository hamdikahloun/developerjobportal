<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="32sp"
            android:fontFamily="@font/ttcommonslight"
            android:textColor="#313D58"
            android:text="Your notifications" />

        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:background="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/ttcommonslight"
                            android:textColor="#000000"
                            android:text="Junior Product Designer" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/ttcommonslight"
                            android:textColor="#707070"
                            android:text="Cracow, Warsaw, Wroclaw" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:background="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/ttcommonslight"
                            android:textColor="#000000"
                            android:text="Junior Product Designer" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/ttcommonslight"
                            android:textColor="#707070"
                            android:text="Cracow, Warsaw, Wroclaw" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="32sp"
            android:fontFamily="@font/ttcommonslight"
            android:textColor="#313D58"
            android:text="Popular companies" />

       <HorizontalScrollView
           android:scrollbars="none"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <androidx.cardview.widget.CardView
                   android:background="@color/colorAccent"
                   app:cardBackgroundColor="@color/colorAccent"
                   app:cardCornerRadius="16dp"
                   app:cardElevation="0dp"
                   android:layout_marginStart="16dp"
                   android:layout_width="120dp"
                   android:layout_height="160dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="16sp"
                       android:layout_margin="14dp"
                       android:fontFamily="@font/ttcommonslight"
                       android:textColor="#FFFFFF"
                       android:text="POSITIONS: 17" />

                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_gravity="bottom"
                       android:padding="16dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="20sp"
                           android:fontFamily="@font/ttcommonsextralight"
                           android:textColor="#FFFFFF"
                           android:text="Netguru" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="12sp"
                           android:fontFamily="@font/ttcommonslight"
                           android:textColor="#ffffff"
                           android:text="Software House" />
                   </LinearLayout>

               </androidx.cardview.widget.CardView>


               <androidx.cardview.widget.CardView
                   android:background="#151146"
                   app:cardBackgroundColor="#151146"
                   app:cardCornerRadius="16dp"
                   app:cardElevation="0dp"
                   android:layout_marginStart="16dp"
                   android:layout_width="120dp"
                   android:layout_height="160dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="16dp"
                       android:fontFamily="@font/ttcommonslight"
                       android:text="POSITIONS: 10"
                       android:textColor="#FFFFFF"
                       android:textSize="14sp" />

                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_gravity="bottom"
                       android:padding="16dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/ttcommonsextralight"
                           android:text="El Passion"
                           android:textColor="#FFFFFF"
                           android:textSize="20sp" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="12sp"
                           android:fontFamily="@font/ttcommonslight"
                           android:textColor="#ffffff"
                           android:text="Software House" />
                   </LinearLayout>

               </androidx.cardview.widget.CardView>


               <androidx.cardview.widget.CardView
                   android:background="#FF5038"
                   app:cardBackgroundColor="#FF5038"
                   app:cardCornerRadius="16dp"
                   app:cardElevation="0dp"
                   android:layout_marginStart="16dp"
                   android:layout_width="120dp"
                   android:layout_height="160dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="16dp"
                       android:fontFamily="@font/ttcommonslight"
                       android:text="POSITIONS: 8"
                       android:textColor="#FFFFFF"
                       android:textSize="14sp" />

                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_gravity="bottom"
                       android:padding="16dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/ttcommonsextralight"
                           android:text="Dev CO"
                           android:textColor="#FFFFFF"
                           android:textSize="20sp" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="12sp"
                           android:fontFamily="@font/ttcommonslight"
                           android:textColor="#ffffff"
                           android:text="Software Dev" />
                   </LinearLayout>

               </androidx.cardview.widget.CardView>


           </LinearLayout>

       </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="32sp"
            android:fontFamily="@font/ttcommonslight"
            android:textColor="#313D58"
            android:text="Promoted jobs" />

        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:background="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:fontFamily="@font/ttcommonslight"
                                android:textColor="#000000"
                                android:text="Senior UI Designer" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:fontFamily="@font/ttcommonslight"
                                android:textColor="@color/colorAccent"
                                android:text="Netguru" />
                        </LinearLayout>
                        <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawablePadding="4dp"
                                android:drawableEnd="@drawable/ic_arrow_up"
                                android:textSize="20sp"
                                android:fontFamily="@font/ttcommonslight"
                                android:textColor="@color/colorAccent"
                                android:text="PLN 10.5K" />
                        </FrameLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:background="#FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:fontFamily="@font/ttcommonslight"
                                android:textColor="#000000"
                                android:text="Senior UI Designer" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:fontFamily="@font/ttcommonslight"
                                android:textColor="@color/colorAccent"
                                android:text="Netguru" />
                        </LinearLayout>
                        <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="20sp"
                                android:drawablePadding="4dp"
                                android:drawableEnd="@drawable/ic_arrow_up"
                                android:fontFamily="@font/ttcommonslight"
                                android:textColor="@color/colorAccent"
                                android:text="PLN 10.5K" />
                        </FrameLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>



</ScrollView>